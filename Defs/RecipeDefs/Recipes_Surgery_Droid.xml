<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<RecipeDef>
		<defName>ChJAndroidShutDownDroid</defName>
		<label>shut down and disassemble</label>
		<description>Shuts down a droid and disassembles for materials.</description>
		<workerClass>Androids.Recipe_Disassemble</workerClass>
		<jobString>Shutting down droid and disassembling.</jobString>
		<soundWorking>Interact_Repair</soundWorking>
		<workAmount>1600</workAmount>
		<targetsBodyPart>false</targetsBodyPart>
		<effectWorking>Repair</effectWorking>
		<isViolation>true</isViolation>
		<anesthetize>false</anesthetize>
		<surgerySuccessChanceFactor>99999</surgerySuccessChanceFactor>
	</RecipeDef>

	<RecipeDef>
		<defName>ChJAndroidRepairKit</defName>
		<label>use droid repair kit</label>
		<description>Uses the Droid repair kit to fully repair a Droid to mint condition from debilitating injuries to wear and tear over time. Also refills coolant on both Droids and Androids.</description>
		<workerClass>Androids.Recipe_RepairKit</workerClass>
		<jobString>Using droid repair kit.</jobString>
		<soundWorking>Interact_Repair</soundWorking>
		<effectWorking>Repair</effectWorking>
		<targetsBodyPart>false</targetsBodyPart>
		<anesthetize>false</anesthetize>
		<workAmount>800</workAmount>
		<dontShowIfAnyIngredientMissing>true</dontShowIfAnyIngredientMissing>
		<surgerySuccessChanceFactor>99999</surgerySuccessChanceFactor>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>AndroidRepairKit</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>AndroidRepairKit</li>
			</thingDefs>
		</fixedIngredientFilter>
	</RecipeDef>
</Defs>
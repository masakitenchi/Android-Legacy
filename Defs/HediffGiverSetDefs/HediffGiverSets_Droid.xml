<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<HediffGiverSetDef>
		<defName>ChjDroid</defName>
		<hediffGivers>
			<!-- Responsive and special -->
			<li Class="Androids.HediffGiver_Machine">
				<hediff>ChjCoolantLoss</hediff>
			</li>

			<!-- Wear and Tear -->
			<li Class="Androids.HediffGiver_MachineWearAndTear">
				<hediff>ChjAndroidDroidCorruptMemory</hediff>
				<potencyToIncreasePerDay>0.05</potencyToIncreasePerDay>
				<chanceToContract>0.1</chanceToContract>
				<partsToAffect>
					<li>Brain</li>
				</partsToAffect>
			</li>

			<li Class="Androids.HediffGiver_MachineWearAndTear">
				<hediff>ChjAndroidDroidFaultySupport</hediff>
				<potencyToIncreasePerDay>0.06</potencyToIncreasePerDay>
				<chanceToContract>0.4</chanceToContract>
				<partsToAffect>
					<li>Torso</li>
				</partsToAffect>
			</li>

			<li Class="Androids.HediffGiver_MachineWearAndTear">
				<hediff>ChjAndroidDroidFaultyLightSensor</hediff>
				<potencyToIncreasePerDay>0.006</potencyToIncreasePerDay>
				<chanceToContract>0.2</chanceToContract>
				<partsToAffect>
					<li>Eye</li>
				</partsToAffect>
			</li>

			<li Class="Androids.HediffGiver_MachineWearAndTear">
				<hediff>ChjAndroidDroidWornOut</hediff>
				<potencyToIncreasePerDay>0.18</potencyToIncreasePerDay>
				<chanceToContract>0.333</chanceToContract>
				<partsToAffect>
					<li>Shoulder</li>
					<li>Hand</li>
					<li>Leg</li>
					<li>Foot</li>
				</partsToAffect>
			</li>
		</hediffGivers>
	</HediffGiverSetDef>
</Defs>